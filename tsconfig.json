{
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["global.ts", "./**/*"],
  "exclude": ["node_modules"]
}
